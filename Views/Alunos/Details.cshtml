@model Ugb.Models.Aluno

@{
    ViewBag.Title = "Details";
}

<style>
    .profile {
        min-height: 355px;
        display: inline-block;
    }

    figcaption.ratings {
        margin-top: 20px;
    }

        figcaption.ratings a {
            color: #f1c40f;
            font-size: 11px;
        }

            figcaption.ratings a:hover {
                color: #f39c12;
                text-decoration: none;
            }

    .divider {
        border-top: 1px solid rgba(0,0,0,0.1);
    }

    .emphasis {
        border-top: 4px solid transparent;
    }

        .emphasis:hover {
            border-top: 4px solid #1abc9c;
        }

        .emphasis h2 {
            margin-bottom: 0;
        }

    span.tags {
        background: #1abc9c;
        border-radius: 2px;
        color: #f5f5f5;
        font-weight: bold;
        padding: 2px 4px;
    }

    .dropdown-menu {
        background-color: #34495e;
        box-shadow: none;
        -webkit-box-shadow: none;
        width: 250px;
        margin-left: -125px;
        left: 50%;
    }

        .dropdown-menu .divider {
            background: none;
        }

        .dropdown-menu > li > a {
            color: #f5f5f5;
        }

    .dropup .dropdown-menu {
        margin-bottom: 10px;
    }

        .dropup .dropdown-menu:before {
            content: "";
            border-top: 10px solid #34495e;
            border-right: 10px solid transparent;
            border-left: 10px solid transparent;
            position: absolute;
            bottom: -10px;
            left: 50%;
            margin-left: -10px;
            z-index: 10;
        }
</style>



<!-- Right side column. Contains the navbar and content of the page -->
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

        <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
                <div class="well profile">
                    <div class="col-sm-12">
                        <div class="col-xs-12 col-sm-8">
                            <h2>@Html.DisplayFor(model => model.Name)</h2>
                            
                            <p><strong> @Html.DisplayNameFor(model => model.StudentRegistration): </strong>  @Html.DisplayFor(model => model.StudentRegistration). </p>
                            <p><strong> @Html.DisplayNameFor(model => model.Street): </strong>  @Html.DisplayFor(model => model.Street). </p>
                            <p><strong> @Html.DisplayNameFor(model => model.State): </strong>  @Html.DisplayFor(model => model.State). </p>
                            <p><strong> @Html.DisplayNameFor(model => model.StatCellphonee): </strong>  @Html.DisplayFor(model => model.StatCellphonee). </p>
                            <p><strong> @Html.DisplayNameFor(model => model.Telephone): </strong>  @Html.DisplayFor(model => model.Telephone). </p>
                            <p><strong> @Html.DisplayNameFor(model => model.Data): </strong>  @Html.DisplayFor(model => model.Data). </p>
                            <p><strong> @Html.DisplayNameFor(model => model.Birthday): </strong>  @Html.DisplayFor(model => model.Birthday). </p>
                            <p><strong> @Html.DisplayNameFor(model => model.Email): </strong>  @Html.DisplayFor(model => model.Email). </p>


                            <p>
                                <strong>@Html.DisplayNameFor(model => model.Course): </strong>
                                <span class="tags">@Html.DisplayFor(model => model.Course)</span>
                            </p>
                        </div>
                        <div class="col-xs-12 col-sm-4 text-center">
                            <figure>
                                <img src="../../img/avatar3.png" alt="" class="img-circle img-responsive">
                                
                            </figure>
                        </div>
                    </div>
                    <div class="col-xs-12 divider text-center">
                        <div class="col-xs-12 col-sm-6 text-center ">
                            <a href='@Url.Action("Edit", "Alunos", new { id = Model.PersonId })' class="btn btn-info btn-block">
                                Editar
                                <i class="glyphicon glyphicon-edit fa-2x"></i>
                            </a>
                         


                        </div>
                        <div class="col-xs-12 col-sm-6 text-center ">
                            
                            <a href='@Url.Action("Index", "Alunos", new { id = Model.PersonId })' class="btn btn-info btn-block">
                                Voltar
                                <i class="glyphicon glyphicon-step-backward fa-2x"></i>
                            </a>


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
       <!-- /.content -->
</aside><!-- /.right-side -->



